{% extends 'layout.njk' %}

{% block content %}
    <div class="card tableContainer">
        <table>
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Acompanhamento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td>
                            <span class="instructorIcon" style="background-image: url({{ instructor.avatar_url }});
                                        background-size: cover;
                                        background-position: center;"></span>
                            {{instructor.name}}
                        </td>
                        <td>{{ instructor.services }}</td>
                        <td>
                            <a href="/instrutores/show/{{instructor.id}}">Ver</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock content %}